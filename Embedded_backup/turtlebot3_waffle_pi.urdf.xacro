<?xml version="1.0"?>
<!-- TurtleBot3 Waffle Pi -->
<!--
Copied and modified from turtlebot3 example -
https://github.com/ROBOTIS-GIT/turtlebot3/blob/kinetic-devel/turtlebot3_description/urdf/turtlebot3_waffle_pi_for_open_manipulator.urdf.xacro
-->
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">
  
  <xacro:macro name="pillar" params="name x y">
    <link name="${prefix}${name}_pillar_link">
      <visual>
        <geometry>
          <cylinder length="0.11" radius="0.0040"/>
        </geometry>
        <material name="light_black"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.11" radius="0.0040"/>
        </geometry>
      </collision>
      <inertial>
        <mass value="0.01" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
      </inertial>
    </link>

    <joint name="${prefix}${name}_pillar_joint" type="fixed">
      <origin xyz="${x} ${y} 0.144" rpy="0 0 0"/>
      <parent link="${prefix}base_link"/>
      <child link="${prefix}${name}_pillar_link"/>
    </joint>
  </xacro:macro>

  <xacro:macro name="turtlebot3_waffle_pi" params="prefix">

  <xacro:property
    name="meshes_file_direction"
    value="package://turtlebot3_manipulation_gazebo/meshes/turtlebot3_waffle_pi"/>


  <link name="${prefix}base_footprint"/>

  <joint name="${prefix}base_joint" type="fixed">
    <parent link="${prefix}base_footprint"/>
    <child link="${prefix}base_link" />
    <origin xyz="0 0 0.021" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}base_link">
    <visual>
      <origin xyz="-0.064 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${meshes_file_direction}/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="-0.064 0 0.047" rpy="0 0 0"/>
      <geometry>
        <box size="0.266 0.266 0.094"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="5.0"/>
      <inertia ixx="3.1e-02" ixy="0" ixz="0"
               iyy="3.1e-02" iyz="0"
               izz="5.3e-02" />
    </inertial>
  </link>


  <xacro:pillar name="back_right"  x="-0.192" y="0.087" />


  <!--위의 플레이트 추가-->
  <link name="${prefix}upper_plate_link">
    <visual>
      <origin xyz="-0.064 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${meshes_file_direction}/base.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_black"/>
    </visual>

    <collision>
      <origin xyz="-0.064 0 0.047" rpy="0 0 0"/>
      <geometry>
        <box size="0.266 0.266 0.094"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.3"/>
      <inertia ixx="2e-03" ixy="0" ixz="0"
               iyy="2e-03" iyz="0"
               izz="3e-03" />
    </inertial>
  </link>


  <joint name="${prefix}upper_plate_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}upper_plate_link" />
    <origin xyz="0 0 0.194" rpy="0 0 0"/>
  </joint>

  <joint name="${prefix}storage_box_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}storage_box_link"/>
    <origin xyz="-0.068 0 0.144" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}storage_box_link">
    <visual>
      <geometry>
        <box size="0.22 0.22 0.1"/>
      </geometry>
      <material name="dark"/>
    </visual>
    <collision>
       <geometry>
        <box size="0.22 0.22 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0" />
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.08" />
    </inertial>
  </link>

  <joint name="${prefix}door_hinge_joint" type="revolute">
    <parent link="${prefix}storage_box_link"/>
    <child link="${prefix}door_link"/>
    <origin xyz="0.11 -0.11 0" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.83" upper="0.0" effort="10.0" velocity="0.5"/>
  </joint>

  <link name="${prefix}door_link">
    <visual>
      <origin xyz="0.005 0.11 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.22 0.1"/>
      </geometry>
      <material name="light_gray"/>
    </visual>
    <collision>
      <origin xyz="0.005 0.11 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.22 0.1"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.3" />
      <inertia ixx="0.002" ixy="0.0" ixz="0.0" iyy="0.008" iyz="0.0" izz="0.008" />
    </inertial>
  </link>


  <joint name="${prefix}wheel_left_joint" type="continuous">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}wheel_left_link"/>
    <origin xyz="0.0 0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="${prefix}wheel_left_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="${meshes_file_direction}/left_tire.stl" scale="0.00133 0.00133 0.00133"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.044"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.0507" />
      <inertia ixx="3.53e-05" ixy="0.0" ixz="0.0"
               iyy="3.53e-05" iyz="0.0"
               izz="6.55e-05" />
      </inertial>
  </link>

  <joint name="${prefix}wheel_right_joint" type="continuous">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}wheel_right_link"/>
    <origin xyz="0.0 -0.144 0.023" rpy="-1.57 0 0"/>
    <axis xyz="0 0 1"/>
  </joint>

  <link name="${prefix}wheel_right_link">
    <visual>
      <origin xyz="0 0 0" rpy="1.57 0 0"/>
      <geometry>
        <mesh filename="${meshes_file_direction}/right_tire.stl" scale="0.00133 0.00133 0.00133"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.018" radius="0.044"/>
      </geometry>
    </collision>

    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.0507" />
      <inertia ixx="3.53e-05" ixy="0.0" ixz="0.0"
               iyy="3.53e-05" iyz="0.0"
               izz="6.55e-05" />
      </inertial>
  </link>

  <joint name="${prefix}caster_back_right_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}caster_back_right_link"/>
    <origin xyz="-0.177 -0.064 -0.004" rpy="-1.57 0 0"/>
  </joint>

  <link name="${prefix}caster_back_right_link">
    
    <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.030 0.031 0.020"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0"
               iyy="0.005" iyz="0.0"
               izz="0.005" />
    </inertial>
  </link>

  <joint name="${prefix}caster_back_left_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}caster_back_left_link"/>
    <origin xyz="-0.177 0.064 -0.004" rpy="-1.57 0 0"/>
  </joint>

  <link name="${prefix}caster_back_left_link">

    
    <collision>
      <origin xyz="0 0.001 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.030 0.031 0.020"/>
      </geometry>
    </collision>
    <inertial>
      <origin xyz="0 0 0" />
      <mass value="0.2" />
      <inertia ixx="0.005" ixy="0.0" ixz="0.0"
               iyy="0.005" iyz="0.0"
               izz="0.005" />
    </inertial>
  </link>

  <joint name="${prefix}caster_front_joint" type="fixed">
      <parent link="${prefix}base_link"/>
      <child link="${prefix}caster_front_link"/>
      <origin xyz="0.04 0.0 -0.004" rpy="0 0 0"/>
    </joint>

    <link name="${prefix}caster_front_link">
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
          <box size="0.030 0.031 0.020"/>
        </geometry>
      </collision>
      <inertial>
        <origin xyz="0 0 0" />
        <mass value="0.01" />
        <inertia ixx="0.001" ixy="0.0" ixz="0.0"
                iyy="0.001" iyz="0.0"
                izz="0.001" />
      </inertial>
    </link>

  <joint name="${prefix}imu_joint" type="fixed">
    <parent link="${prefix}base_link"/>
    <child link="${prefix}imu_link"/>
    <origin xyz="0.0 0 0.068" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}imu_link"/>

  <joint name="${prefix}scan_joint" type="fixed">
    <parent link="${prefix}upper_plate_link"/>
    <child link="${prefix}base_scan"/>
    <origin xyz="-0.064 0 0.122" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}base_scan">
    <visual>
      <origin xyz="0 0 0.0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="${meshes_file_direction}/ladar.stl" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="dark"/>
    </visual>

    <collision>
      <origin xyz="0.015 0 -0.0065" rpy="0 0 0"/>
      <geometry>
        <cylinder length="0.0315" radius="0.055"/>
      </geometry>
    </collision>

    <inertial>
      <mass value="0.114" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0"
               iyy="0.001" iyz="0.0"
               izz="0.001" />
    </inertial>
  </link>

  <joint name="${prefix}camera_joint" type="fixed">
    <parent link="${prefix}upper_plate_link"/>
    <child link="${prefix}camera_link"/>
    <origin xyz="0.073 -0.011 0.084" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}camera_link">
    <collision>
      <origin xyz="0.005 0.011 0.013" rpy="0 0 0"/>
      <geometry>
        <box size="0.015 0.030 0.027"/>
      </geometry>
    </collision>
  </link>

  <joint name="${prefix}camera_rgb_joint" type="fixed">
    <parent link="${prefix}camera_link"/>
    <child link="${prefix}camera_rgb_frame"/>
    <origin xyz="0.003 0.011 0.009" rpy="0 0 0"/>
  </joint>

  <link name="${prefix}camera_rgb_frame"/>

  <joint name="${prefix}camera_rgb_optical_joint" type="fixed">
    <parent link="${prefix}camera_rgb_frame"/>
    <child link="${prefix}camera_rgb_optical_frame"/>
    <origin xyz="0 0 0" rpy="-1.57 0 -1.57"/>
  </joint>

  <link name="${prefix}camera_rgb_optical_frame"/>

  <!-- Gazebo Storage Door Plugin -->
  <gazebo>
    <plugin name="storage_door_plugin" filename="libStorageDoorRos2Plugin.so">
      <model_name>${prefix}turtlebot3_waffle_pi</model_name>
    </plugin>
  </gazebo>

  </xacro:macro>

</robot>
