<mapper namespace="org.example.nareugobackend.mapper.ProductMapper">

  <insert id="createProduct" parameterType="org.example.nareugobackend.api.controller.product.request.ProductCreateRequest" useGeneratedKeys="true" keyProperty="productId">
    INSERT INTO products (seller_id, title, description, price, status, si_do, si_gun_gu, eup_myeon_dong, apartment_name)
    VALUES (#{sellerId}, #{title}, #{description}, #{price}, 'FOR_SALE', #{siDo}, #{siGunGu}, #{eupMyeonDong}, #{apartmentName})
  </insert>

  <insert id="insertImageKeys" parameterType="map">
    INSERT INTO product_images (product_id, image_url)
    VALUES
    <foreach collection="imageUrls" item="key" separator=",">
        (#{productId}, #{key})
    </foreach>
  </insert>

