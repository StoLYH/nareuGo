<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.nareugobackend.mapper.ProductMapper">


  <insert id="createProduct" parameterType="org.example.nareugobackend.api.controller.product.request.ProductCreateRequest" useGeneratedKeys="true" keyProperty="productId">
    INSERT INTO products (seller_id, title, description, price, status, apartment_name, si_do, si_gun_gu, eup_myeon_dong)
    VALUES (#{sellerId}, #{title}, #{description}, #{price}, 'FOR_SALE', #{apartmentName}, #{siDo}, #{siGunGu}, #{eupMyeonDong})
  </insert>

  <insert id="insertImageKeys" parameterType="map">
    INSERT INTO product_images (product_id, image_url)
    VALUES 
    <foreach collection="imageUrls" item="key" separator=",">
        (#{productId}, #{key})
    </foreach>
  </insert>

  <delete id="deleteProduct" parameterType="long">
    DELETE FROM products
    WHERE product_id = #{productId}
  </delete>

  <select id="selectUserInfo" parameterType="long" resultType="org.example.nareugobackend.api.service.product.request.UserInfoRequest">
    SELECT 
        apartment_name,
        si_do,
        si_gun_gu,
        eup_myeon_dong
    FROM users
    WHERE user_id = #{userId}
  </select>

</mapper>