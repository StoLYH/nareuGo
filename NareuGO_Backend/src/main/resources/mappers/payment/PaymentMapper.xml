<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.nareugobackend.domain.payment.PaymentMapper">
  <insert id="save" parameterType="org.example.nareugobackend.domain.payment.Payment" useGeneratedKeys="true" keyProperty="paymentId">
    INSERT INTO payments (order_id, payment_key, amount, status, approved_at)
    VALUES (#{orderId}, #{paymentKey}, #{amount}, #{status}, #{approvedAt})
  </insert>
</mapper>